{
  // Seção de Log:
  "Logging": {
    // Nível padrão de log:
    "LogLevel": {
      "Default": "Information", // Registra logs de nível Information (informação) ou superior
      "Microsoft.AspNetCore": "Warning" // Registra logs de nível Warning (aviso) ou superior para a categoria Microsoft.AspNetCore
    }
  },

  // Seção de strings de conexão:
  "ConnectionStrings": {
    "DataBase": "Server=DESKTOP;Database=DB_SistemaContatos;Trusted_Connection=True;" // String de conexão para o banco de dados (provavelmente SQL Server)
  },

  // Seção de hosts permitidos (NÃO RECOMENDADO):
  "AllowedHosts": "*" // Permitir acesso de qualquer host (NÃO USE EM PRODUÇÃO!)
}
